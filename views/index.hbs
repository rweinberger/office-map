<h1>{{title}}</h1>
<p>LETS THINK OF A NAME</p>

{{#if user}}
<p>Welcome, {{user.firstName}}. <a href='/logout'>logout</a></p>
{{else}}
<p>Please <a href='/auth/google'>sign in</a> to add pins!</p>
{{/if}}

<div id='mouse-trail'></div>
<div id='map'>
  {{#each pins}}
    <div class='pin' style='top:{{this.top}}px; left:{{this.left}}px' data-toggle="modal" data-target="#modal-{{this._id}}">
      <div class='pin-hover-label'>{{this.text}}</div>
      <div class='pin-click-label'></div>
    </div>
    <div class="modal fade" id="modal-{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <h3>{{this.text}}</h3> 
          located at {{this.location}}<br>
          posted by {{this.userName}} at {{this.hour}}:{{this.minute}} on {{this.month}}/{{this.day}}/{{this.year}}<br>
          <button type="button" class="btn btn-secondary close-modal" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>
