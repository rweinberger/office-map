<script>
  $('#mapText').on('click', function() {
    $('#map').css('opacity', 1);
  });
</script>

<script>
  $("#mapText").click(function() {
    $("#mapText").fadeOut("normal", function() {
        $(this).remove();
    });
  });
  $("#mapText").click(function() {
    $("#swear").delay(700).fadeOut("normal", function() {
        $(this).remove();
    });
  });

</script>

<script type="text/javascript">
  $(document).ready(function() {
    $("#mapText").click(function() {
      $("#swear-left").animate({
        "marginLeft": '-=260px'
      }, 1000);
    });
  });

  $(document).ready(function() {
    $("#mapText").click(function() {
      $("#swear-right").animate({
        "marginLeft": '+=500px'
      }, 1000);
    });
  });
</script>

